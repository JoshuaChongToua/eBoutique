{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .container {
            display: flex;
            margin-top: 20px;
            flex-direction: column;
            gap: 30px;
            align-items: center;
        }

        .dont-miss {
            display: flex;
            width: 100%;
            padding: 10px;
            gap: 10px;
            column-gap: 30px;
            justify-content: flex-start;

        }

        .name {
            display: flex;
            color: #00d4a8;
            text-shadow: 0 0 10px #00d4a8, 0 0 20px #00d4a8;
        }

        .homepage {
            background-image: url("{{ asset('images/europe/avion.jpg') }}");
            padding-top: 10px;
            width: 100%;
            height: 620px;
            background-size: cover;
            background-position: center;
            background-color: rgba(0, 0, 0, 0.3);
            background-blend-mode: multiply;
        }

        .homepage-title{
            display: flex;
            justify-content: center;

        }

        .homepage-title p {
            font-size: 80px;
            color: #00d4a8;
            text-shadow: 0 0 10px #00d4a8, 0 0 20px #00d4a8;
        }

        .homepage-subtitle  {
            display: flex;
            justify-content: center;
            font-size: 30px;
            color: white;
        }

        .homepage-button {
            display: flex;
            justify-content: center;
        }

        .homepage-button a {
            text-decoration: none;
        }

        .btn-gris {
            background-color: #00d4a8;
        }

    </style>

    <div class="container">
        <div class="homepage">
            <div class="homepage-title">
                <p>Prêt pour l'Aventure ?</p>
            </div>
            <div class="homepage-subtitle">
                <p>Votre Prochain Voyage Commence Ici !</p>
            </div>
            <div class="homepage-button">
                <a href="{{ path('app_get_all_produit') }}"><button class="btn-gris">Découvrir</button> </a>
            </div>
        </div>
        <div class="row dont-miss">
            <div class="col-lg-12 name">
                <h4>A ne pas manquer !</h4>
            </div>
            {% for produit in produits %}
                <div class="card">
                    <div class="content">
                        <div class="back">
                            <div class="back-content"
                                 style="background-image: url('{{ produit.image[0] }}');"
                                 data-images='{{ produit.image|json_encode|raw }}'
                                 id="produit-{{ produit.id }}">
                                <a class="ville-name" href="/produit/{{ produit.id }}">
                                    <strong>{{ produit.reference }}</strong>
                                </a>

                            </div>
                        </div>
                        <div class="front">
                            <div class="img"
                                 style="background-image: url('{{ produit.image[1] }}');">
                            </div>
                            <div class="front-content">
                                <div class="description">
                                    <div class="title">
                                        <p class="title">
                                            <strong>{{ produit.nom }}</strong>
                                        </p>
                                    </div>
                                    <div class="produit-description">
                                        <p class="produit-description">
                                            {{ produit.description|slice(0, 110) ~ '...' }}
                                        </p>
                                    </div>
                                    <p class="card-footer">
                                        30 Mins &nbsp; | &nbsp; 1 Serving
                                    </p>
                                    <p class="produit-description-souligne">
                                        <a href="/produit/{{ produit.id }}">Voir</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row dont-miss">
            <div class="col-lg-12 name">
                <h4>Destination Plage !</h4>
            </div>
            {% for produit in plages %}
                <div class="card">
                    <div class="content">
                        <div class="back">
                            <div class="back-content"
                                 style="background-image: url('{{ produit.image[0] }}');"
                                 data-images='{{ produit.image|json_encode|raw }}'
                                 id="produit-{{ produit.id }}">
                                <a class="ville-name" href="/produit/{{ produit.id }}">
                                    <strong>{{ produit.reference }}</strong>
                                </a>

                            </div>
                        </div>
                        <div class="front">
                            <div class="img"
                                 style="background-image: url('{{ produit.image[1] }}')">
                            </div>
                            <div class="front-content">
                                <div class="description">
                                    <div class="title">
                                        <p class="title">
                                            <strong>{{ produit.nom }}</strong>
                                        </p>
                                    </div>
                                    <div class="produit-description">
                                        <p class="produit-description">
                                            {{ produit.description|slice(0, 110) ~ '...' }}
                                        </p>
                                    </div>
                                    <p class="card-footer">
                                        30 Mins &nbsp; | &nbsp; 1 Serving
                                    </p>
                                    <p class="produit-description-souligne">
                                        <a href="/produit/{{ produit.id }}">Voir</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="{{ asset('/js/img.js') }}" defer></script>
{% endblock %}
