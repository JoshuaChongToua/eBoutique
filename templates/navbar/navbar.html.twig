<style>
    .navbar-bar {
        display: flex;
        background-color: white;
        padding: 15px;
    }

    .logo {
        display: flex;
        width: 20%;
    }

    .categorie {
        display: flex;
        width: 60%;
        justify-content: space-around;
        align-items: center;
    }

    .profile {
        display: flex;
        width: 20%;
