    </div>

    <div class="categorie">
        <div>
            <a class="nav-link" href="{{ path('app_get_all_produit') }}">Monde</a>
        </div>
        <div>
            <a class="nav-link" href="{{ path('app_get_europe_produit') }}">Europe</a>
